# Package installation
save-exact=true
package-lock=true
audit=true

# Performance
prefer-offline=true
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Security
audit-level=moderate

# Output
loglevel=warn
progress=true

# Engine strict (enforce Node version)
engine-strict=true

# Optional: Uncomment if using private registry
# registry=https://registry.npmjs.org/
# always-auth=false
